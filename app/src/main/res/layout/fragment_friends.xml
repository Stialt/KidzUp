<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.prototypekidzup1.fragment.FriendsFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/frag_friends_search_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="Search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frag_friends_recycle_list"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/frag_friends_search_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="315dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:text="Go" />

    <TextView
        android:id="@+id/frag_friends_nothing_to_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="130dp"
        android:visibility="invisible"
        android:text="Nothing to show" />

</FrameLayout>
