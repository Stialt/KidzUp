<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_border"
    android:padding="15dp">


    <ImageView
        android:id="@+id/task_single_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/small_task_icon_drawable"
        android:src="@drawable/icon_attach_image" />

    <ImageView
        android:id="@+id/task_single_prize_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_task_icon_drawable"
        android:src="@drawable/icon_attach_image" />

    <ImageView
        android:id="@+id/task_single_punish_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/small_task_icon_drawable"
        android:src="@drawable/icon_attach_image" />

    <TextView
        android:id="@+id/task_single_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/task_single_icon"
        android:layout_below="@+id/task_single_icon"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/task_single_prize_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_single_prize_icon"
        android:layout_centerHorizontal="true"
        android:text="Prize"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/task_single_punish_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/task_single_punish_icon"
        android:layout_below="@+id/task_single_punish_icon"
        android:text="Punishment"
        android:textAlignment="center"
        android:textColor="@android:color/black" />
</RelativeLayout>