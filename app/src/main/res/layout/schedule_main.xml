<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:entries="@array/days_of_the_week"
        android:prompt="@string/choose_a_day"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/timetable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/mondayHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="Monday"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginStart="40dp"
                android:text="Time"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textAlignment="center"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot1_time"
                android:layout_marginStart="20dp"
                android:text="9:00 - 10:30"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot1_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot2_time"
                android:layout_marginStart="20dp"
                android:text="10:30 - 12:00"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot2_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot3_time"
                android:layout_marginStart="20dp"
                android:text="12:00 - 13:30"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot3_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot4_time"
                android:layout_marginStart="20dp"
                android:text="13:30 - 15:00"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot4_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot5_time"
                android:layout_marginStart="20dp"
                android:text="15:00 - 16:30"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot5_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot6_time"
                android:layout_marginStart="20dp"
                android:text="16:30 - 18:00"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot6_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:id="@+id/monday_slot7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/monday_slot7_time"
                android:layout_marginStart="20dp"
                android:text="18:00 - 19:30"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/monday_slot7_subject"
                android:layout_marginStart="60dp"
                android:text="Subject"
                android:textSize="20sp" />

        </TableRow>

        <Button
            android:id="@+id/applyChangesSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:shadowColor="#515949"
            android:shadowDx="5"
            android:shadowDy="-3"
            android:shadowRadius="5"
            android:text="Apply Changes"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </TableLayout>


</android.support.constraint.ConstraintLayout>