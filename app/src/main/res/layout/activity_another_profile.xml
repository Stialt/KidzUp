<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585858"
    tools:context="com.example.admin.prototypekidzup1.activity.AnotherProfileActivity">


    <include layout="@layout/app_bar_general" android:id="@+id/another_profile_toolbar">

    </include>

    <TextView
        android:id="@+id/another_profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/another_profile_display_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Display Name"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/another_profile_display_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/another_profile_toolbar"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_profile" />

    <TextView
        android:id="@+id/another_profile_display_status"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/another_profile_display_mode"
        android:layout_centerHorizontal="true"
        android:text="Hi There!"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/another_profile_display_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/another_profile_display_name"
        android:layout_centerHorizontal="true"
        android:text="Total Friends"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/another_profile_send_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:background="@color/colorPrimary"
        android:text="Send Friend Request"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/another_profile_decline_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@color/colorPrimary"
        android:text="Decline Friend Request"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/another_profile_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/another_profile_send_request_button"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Family Request Key"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />


</RelativeLayout>
